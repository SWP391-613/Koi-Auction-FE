{
  "compilerOptions": {
    "module": "ESNext", // Quy định output module được sử dụng
    "moduleResolution": "node", //
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "ES5", // Target ouput cho code
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve", // Quy định output cho JSX
    "removeComments": true, // Xóa comment trong code
    "noEmit": true, // Không emit file khi build
    "pretty": true,
    "outDir": "dist", // Đường dẫn output cho thư mục build
    "esModuleInterop": true /* Emit additional JavaScript to ease support for importing CommonJS modules. This enables 'allowSyntheticDefaultImports' for type compatibility. */,
    "strict": false /* Enable all strict type-checking options. */,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "baseUrl": ".", // Đường dẫn base cho các import
    "paths": {
      "~/*": ["src/*"], // Đường dẫn tương đối cho các import (alias)
      "type": ["jest"]
    },
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vite/client"],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "files": ["src/type.d.ts"], // Các file dùng để defined global type cho dự án
  "include": [
    "src/**/*",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./dist/types/**/*.ts"
  ], // Đường dẫn include cho các file cần build
  "exclude": ["node_modules"]
}
